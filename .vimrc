set nocompatible

filetype plugin on
filetype indent on

" show line numbers
set number
set relativenumber

" show position
set ruler

" search options
set ignorecase
set smartcase
set hlsearch
set incsearch
set magic
set showmatch

" space instead of tabs && be smart??
set expandtab
set smarttab

" 8 space tabs cause i like
" old computers and they had it
set shiftwidth=8
set tabstop=8

" indicator for when im about
" to start writing bad code
set colorcolumn=80

" auto indent + smart indent
set ai
set si
